generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL") 
}

model File {
  id         String   @id @default(uuid())
  filename   String
  mimetype   String
  size       Int
  path       String
  uploadedAt DateTime @default(now())
}
